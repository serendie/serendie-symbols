{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "git": {
    "commitMessage": "release v${version}",
    "tagName": "${npm.name}@${version}"
  },
  "github": {
    "release": true,
    "releaseName": "${npm.name}@${version}"
  },
  "hooks": {
    "after:bump": "npm run build"
  }
}
